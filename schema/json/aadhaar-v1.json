    "version": "1.0",
    "type": "Aadhaar"
  },
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Aadhaar schema for Farmers",
  "title": "Aadhaar schema for Farmers",
  "properties": {
    "credentialSubject": {
      "description": "Stores the data of the credential",
      "title": "Credential subject",
      "properties": {
        "id": {
          "description": "Stores the DID of the subject that owns the credential",
          "title": "Credential subject ID",
          "format": "uri",
          "type": "string"
        },
        "aadhaar_id": {
          "description": "Hash of the Aadhaar number",
          "title": "Aadhaar ID",
          "type": "string"
        },
        "aadhaar_name": {
          "description": "Name as per Aadhaar records",
          "title": "Aadhaar Name",
          "type": "string"
        },
        "gender": {
          "description": "Gender as per Aadhaar records",
          "title": "Gender",
          "type": "string"
        },
        "father_or_husband_name": {
          "description": "Father's or Husband's Name as per Aadhaar records",
          "title": "Father / Husband Name",
          "type": "string"
        },
        "date_of_birth": {
          "description": "Date of Birth in YYYYMMDD format",
          "title": "Date of Birth",
          "type": "number"
        },
        "address": {
          "description": "Full address as a plain string text",
          "title": "Address",
          "type": "string"
        }
      },
      "required": [
        "aadhaar_id",
        "aadhaar_name",
        "gender",
        "father_or_husband_name",
        "date_of_birth",
        "address"
      ],
      "type": "object"
    },
    "@context": {
      "type": ["string", "array", "object"]
    },
    "expirationDate": {
      "format": "date-time",
      "type": "string"
    },
    "id": {
      "type": "string"
    },
    "issuanceDate": {
      "format": "date-time",
      "type": "string"
    },
    "issuer": {
